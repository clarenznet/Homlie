<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:background="@color/white">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/deliverycard_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:elevation="0dp"
        card_view:cardCornerRadius="2dp"
        android:padding="5dp"
        android:background="@color/colorPrimaryDark"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <ImageView
            android:layout_alignParentStart="true"
            android:layout_width="40dp"
            android:padding="2dp"
            android:id="@+id/icoEmail"
            android:src="@drawable/icoemail"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            />
        <TextView
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="Email: planck@plasma.com"
        android:id="@+id/tvEmail"
        android:layout_toEndOf="@+id/icoEmail"

            />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_margin="5dip"
        android:background="@color/colorPrimary"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:elevation="0dp"
        card_view:cardCornerRadius="2dp"
        android:padding="5dp"
        android:background="@color/colorPrimaryDark"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_alignParentStart="true"
                android:layout_width="40dp"
                android:padding="2dp"
                android:id="@+id/icoUser"
                android:src="@drawable/callagent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="Phonenumber: +254700000000"
                android:id="@+id/tvUsername"
                android:layout_toEndOf="@+id/icoUser"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_margin="5dip"
        android:background="@color/colorPrimary"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:elevation="0dp"
        card_view:cardCornerRadius="2dp"
        android:padding="5dp"
        android:background="@color/colorPrimaryDark"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_alignParentStart="true"
                android:layout_width="40dp"
                android:padding="2dp"
                android:id="@+id/icoTickets"
                android:src="@drawable/icotickets"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="Total tickets: 117"
                android:id="@+id/tvTickets"
                android:layout_toEndOf="@+id/icoTickets"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_margin="5dip"
        android:background="@color/colorPrimary"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:elevation="0dp"
        card_view:cardCornerRadius="2dp"
        android:padding="5dp"
        android:background="@color/colorPrimaryDark"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_alignParentStart="true"
                android:layout_width="40dp"
                android:padding="2dp"
                android:id="@+id/icoRating"
                android:src="@drawable/icoperformance"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                />
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:src="@drawable/rating"
                android:id="@+id/imgRating"
                android:layout_toEndOf="@+id/icoRating"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_margin="5dip"
        android:background="@color/colorPrimary"/>
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:text="Log Out"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_gravity="bottom"
        />

</LinearLayout>
</ScrollView>
